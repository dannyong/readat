<p id="notice"><%= notice %></p>

<h1>Writes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Post</th>
      <th>Publish</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @writes.each do |write| %>
      <tr>
        <td><%= write.title %></td>
        <td><%= write.post %></td>
        <td><%= write.publish %></td>
        <td><%= write.user_id %></td>
        <td><%= link_to 'Show', write %></td>
        <td><%= link_to 'Edit', edit_write_path(write) %></td>
        <td><%= link_to 'Destroy', write, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

